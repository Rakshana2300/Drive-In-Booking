<Main>
    <h2>{{@rental.title}}</h2>
    <p>Nice find! This looks like a nice place to stay near Chennai.</p>
    <button class="btn btn-primary" type="button"><a href="#" target="_blank" rel="external nofollow noopener noreferrer" class="share button">
        Share on Twitter
    </a></button>
</Main>
<article class="detailed">
    <div class="details">
        <Rental::Image src={{@rental.image}} alt="An image of {{@rental.title}}"/>  
      <p>{{@rental.description}}</p>
    <h4>{{@rental.subheading}}</h4>
    <p>{{@rental.subdesc}}</p>
    {{#if @rental.rooms }}
        <form {{action 'bookDate' @rental.amount on="submit"}}>
            <p>
                Check-in Date : {{pikaday-input format='DD-MM-YYYY' onSelection=(action 'startDate')}}
            </p>
            <p>
                Check-out Date : {{pikaday-input format='DD-MM-YYYY' onSelection=(action 'endDate')}}
            </p>
            <p>
                Room(s) Required : {{input type="number" value=room }}
            </p>
            <button type="submit">Book</button>
        </form>
    {{else}}
        <h4>Sorry, currently no rooms are available. Check back later!</h4>
    {{/if}}
   
    {{#if isBooked }}
        <h3>Booking Details</h3>
        <p>Rooms : {{this.rooms}}</p>
        <p>No of days : {{this.days}}</p>
        <p>Amount : {{this.total}}</p>   
    {{/if}}
    
     <!--<BasicDropdown></BasicDropdown>-->
    </div>
</article>